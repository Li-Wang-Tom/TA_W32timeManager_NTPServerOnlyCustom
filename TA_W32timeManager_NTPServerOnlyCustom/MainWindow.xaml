<Window x:Class="W32TimeManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Time Service Manager" 
        Height="620" Width="600" 
        WindowStartupLocation="CenterScreen"
        Background="#121212"
        ResizeMode="NoResize"
        MinHeight="680" MinWidth="600"
        MaxHeight="680" MaxWidth="600">

    <!-- 起動時フェードイン -->
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:2"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Window.Resources>
        <!-- ネオンボタンスタイル -->
        <Style x:Key="NeonButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#222"/>
            <Setter Property="BorderBrush" Value="#00FFC6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="border" CornerRadius="5"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#00FFC6" BlurRadius="15" ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Background" Value="#333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <!-- 背景グラデーション -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#121212" Offset="0"/>
                <GradientStop Color="#1E1E1E" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- タイトル -->
        <TextBlock Text="Time Service Manager" FontSize="24" Foreground="#00FFC6"
                   HorizontalAlignment="Center" FontWeight="Bold" Margin="0,10,0,0"/>

        <!-- サービスステータス -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0">
            <Ellipse x:Name="StatusLamp" Width="20" Height="20" Margin="0,0,10,0">
                <Ellipse.Effect>
                    <DropShadowEffect Color="LimeGreen" BlurRadius="15" ShadowDepth="0" Opacity="0.9"/>
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock x:Name="StatusText" Text="Service: UNKNOWN" FontSize="16" Foreground="White"/>
        </StackPanel>



        <!-- ボタン郡 -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0">

            <!-- W32Time サービス制御グループ -->
            <Border BorderBrush="#00FFC6" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="W32Time Service Control" FontSize="12" Foreground="#00FFC6" 
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <Button x:Name="StartButton" Content="W32Time Start Service" Width="200" Height="45" Click="StartButton_Click"
                            Style="{StaticResource NeonButtonStyle}" Margin="0,0,0,10"/>
                    <Button x:Name="StopButton" Content="W32Time Stop Service" Width="200" Height="45" Click="StopButton_Click"
                            Style="{StaticResource NeonButtonStyle}" Margin="0,0,0,10"/>
                    <Button x:Name="StartupButton" Content="Set Startup Auto" Width="200" Height="45" Click="StartupButton_Click"
                            Style="{StaticResource NeonButtonStyle}" Margin="0"/>
                </StackPanel>
            </Border>

            <!-- NTP 設定モードグループ -->
            <Border BorderBrush="#00FFC6" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,0">
                <StackPanel Orientation="Vertical">
                    <!-- タイトルとステータス -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <TextBlock Text="NTP Configuration Mode" FontSize="12" Foreground="#00FFC6" 
                                   Margin="0,0,10,0"/>
                        <Ellipse x:Name="NtpConfigLamp" Width="16" Height="16" Margin="0,0,5,0" Fill="Gray">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="0" Opacity="0.9"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <TextBlock x:Name="NtpConfigText" Text="UNKNOWN" FontSize="10" Foreground="White"/>
                    </StackPanel>

                    <!-- Production Mode (Server Only) ボタン -->
                    <Button x:Name="ConfigureNtpButton" Width="200" Height="45" Click="ConfigureNtpButton_Click"
                            Style="{StaticResource NeonButtonStyle}" Margin="0,0,0,10"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBlock TextAlignment="Center">
                            <Run Text="Operation Mode"/>
                            <LineBreak/>
                            <Run Text="(Server Only)"/>
                        </TextBlock>
                    </Button>

                    <!-- Maintenance Mode (Client+Server) ボタン -->
                    <Button x:Name="RestoreStandardButton" Width="200" Height="45" Click="RestoreStandardNtpButton_Click"
                            Style="{StaticResource NeonButtonStyle}" Margin="0"
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <TextBlock TextAlignment="Center">
                            <Run Text="Maintenance Mode"/>
                            <LineBreak/>
                            <Run Text="(Client+Server)"/>
                        </TextBlock>
                    </Button>
                </StackPanel>
            </Border>

        </StackPanel>

        <!-- プログレスメッセージ -->
        <TextBlock x:Name="ProgressMessage" Text="" FontSize="14" Foreground="White"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                   Margin="0,0,0,50" Visibility="Collapsed"/>

        <!-- プログレスバー -->
        <ProgressBar x:Name="ProgressBar" Visibility="Collapsed"
                     Height="10" IsIndeterminate="True"
                     Margin="0,0,0,30" VerticalAlignment="Bottom"/>
    </Grid>
</Window>